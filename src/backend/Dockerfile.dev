# Development Backend Dockerfile with Hot Reload
FROM node:22-alpine

# Install system dependencies
RUN apk add --no-cache bash curl netcat-openbsd wget

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S weenapp && \
    adduser -S weenapp -u 1001 && \
    chown -R weenapp:weenapp /app

# Switch to non-root user
USER weenapp

# Set environment variables
ENV NODE_ENV=development
ENV PORT=8080

# Expose port and debug port
EXPOSE 8080 9229

# Start with development mode (hot reload)
CMD ["npm", "run", "start:dev"]